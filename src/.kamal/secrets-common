# example content for $HOME/.kamal/mrwatchdog_secrets_common.json
# {
#   "KAMAL_REGISTRY_USERNAME": "<docker hub username>",
#   "KAMAL_REGISTRY_PASSWORD": "<docker hub password>",
# 
#   "SmtpServerEmailSender__SmtpServer": "<smtp server>",
#   "SmtpServerEmailSender__Port": "<smtp server port>",
#   "SmtpServerEmailSender__Username": "<smtp server username>",
#   "SmtpServerEmailSender__Password": "<smtp server password>",
#   
#   "ReCaptcha__SiteKey": "<recaptcha sitekey>",
#   "ReCaptcha__SecretKey": "<recaptcha secretkey>",
#   "Logging__LogErrorApiSecret": "<logging error api secret>",
#   "Authentication__Google__ClientSecret": "<google client secret>",
#   "Authentication__Google__ClientId": "<google client id>",
#
#   "GITHUB_TOKEN": "<GitHub token>"
# }

SECRETS_FILE="$HOME/.kamal/mrwatchdog_secrets_common.json"

KAMAL_REGISTRY_USERNAME=$(jq -r '.KAMAL_REGISTRY_USERNAME' "$SECRETS_FILE")
KAMAL_REGISTRY_PASSWORD=$(jq -r '.KAMAL_REGISTRY_PASSWORD' "$SECRETS_FILE")

SmtpServerEmailSender__SmtpServer=$(jq -r '.SmtpServerEmailSender__SmtpServer' "$SECRETS_FILE")
SmtpServerEmailSender__Port=$(jq -r '.SmtpServerEmailSender__Port' "$SECRETS_FILE")
SmtpServerEmailSender__Username=$(jq -r '.SmtpServerEmailSender__Username' "$SECRETS_FILE")
SmtpServerEmailSender__Password=$(jq -r '.SmtpServerEmailSender__Password' "$SECRETS_FILE")

ReCaptcha__SiteKey=$(jq -r '.ReCaptcha__SiteKey' "$SECRETS_FILE")
ReCaptcha__SecretKey=$(jq -r '.ReCaptcha__SecretKey' "$SECRETS_FILE")
Logging__LogErrorApiSecret=$(jq -r '.Logging__LogErrorApiSecret' "$SECRETS_FILE")
Authentication__Google__ClientSecret=$(jq -r '.Authentication__Google__ClientSecret' "$SECRETS_FILE")
Authentication__Google__ClientId=$(jq -r '.Authentication__Google__ClientId' "$SECRETS_FILE")

GITHUB_TOKEN=$(jq -r '.GITHUB_TOKEN' "$SECRETS_FILE")

