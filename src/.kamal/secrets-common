SECRETS_FILE="$HOME/.kamal/mrwatchdog_secrets_common.json"

KAMAL_REGISTRY_USERNAME=$(jq -r '.KAMAL_REGISTRY_USERNAME' "$SECRETS_FILE")
KAMAL_REGISTRY_PASSWORD=$(jq -r '.KAMAL_REGISTRY_PASSWORD' "$SECRETS_FILE")

SmtpClientDirectlyToRecipientMailServerEmailSender__DkimSelector=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__DkimSelector' "$SECRETS_FILE")
SmtpClientDirectlyToRecipientMailServerEmailSender__DkimPrivateKey=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__DkimPrivateKey' "$SECRETS_FILE")
SmtpClientDirectlyToRecipientMailServerEmailSender__DkimDomain=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__DkimDomain' "$SECRETS_FILE")
SmtpClientDirectlyToRecipientMailServerEmailSender__EhloDomainName=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__EhloDomainName' "$SECRETS_FILE")
ReCaptcha__SiteKey=$(jq -r '.ReCaptcha__SiteKey' "$SECRETS_FILE")
ReCaptcha__SecretKey=$(jq -r '.ReCaptcha__SecretKey' "$SECRETS_FILE")
Logging__LogErrorApiSecret=$(jq -r '.Logging__LogErrorApiSecret' "$SECRETS_FILE")
EmailAddresses__NoReply=$(jq -r '.EmailAddresses__NoReply' "$SECRETS_FILE")
EmailAddresses__Support=$(jq -r '.EmailAddresses__Support' "$SECRETS_FILE")
EmailAddresses__Admin=$(jq -r '.EmailAddresses__Admin' "$SECRETS_FILE")
EmailAddresses__BackendErrors=$(jq -r '.EmailAddresses__BackendErrors' "$SECRETS_FILE")
EmailAddresses__FrontendErrors=$(jq -r '.EmailAddresses__FrontendErrors' "$SECRETS_FILE")
Authentication__Google__ClientSecret=$(jq -r '.Authentication__Google__ClientSecret' "$SECRETS_FILE")
Authentication__Google__ClientId=$(jq -r '.Authentication__Google__ClientId' "$SECRETS_FILE")

GITHUB_TOKEN=$(jq -r '.GITHUB_TOKEN' "$SECRETS_FILE")

