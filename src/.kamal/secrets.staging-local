# example content for $HOME/.kamal/mrwatchdog_secrets_staging.json
# {
#   "POSTGRES_USER": "<staging postgres user>",
#   "POSTGRES_PASSWORD": "<staging postgres password>", 
#   "POSTGRES_DB": "<staging postgres db>",
#
#   "SmtpClientDirectlyToRecipientMailServerEmailSender__DkimSelector": "<DKIM selector>",
#   "SmtpClientDirectlyToRecipientMailServerEmailSender__DkimPrivateKey": "-----BEGIN PRIVATE KEY-----private key content without new lines-----END PRIVATE KEY-----",
#   "SmtpClientDirectlyToRecipientMailServerEmailSender__DkimDomain": "<DKIM domain>",
#   "SmtpClientDirectlyToRecipientMailServerEmailSender__EhloDomainName": "<EHLO domain name>",
#
#   "EmailAddresses__NoReply": "<noreply email address>",
#   "EmailAddresses__Support": "<support email address>",
#   "EmailAddresses__Admin": "<admin email address>",
#   "EmailAddresses__BackendErrors": "<backend errors email address>",
#   "EmailAddresses__FrontendErrors": "<frontend errors email address>",
#
#   "Runtime__Url": "<runtime url>",
#   "Jwt__Key": "<JWT key>",
#   "ConnectionStrings__Database": "<production connection string>"
# }

SECRETS_FILE="$HOME/.kamal/mrwatchdog_secrets_staging.json"

POSTGRES_USER=$(jq -r '.POSTGRES_USER' "$SECRETS_FILE")
POSTGRES_PASSWORD=$(jq -r '.POSTGRES_PASSWORD' "$SECRETS_FILE")
POSTGRES_DB=$(jq -r '.POSTGRES_DB' "$SECRETS_FILE")

SmtpClientDirectlyToRecipientMailServerEmailSender__DkimSelector=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__DkimSelector' "$SECRETS_FILE")
SmtpClientDirectlyToRecipientMailServerEmailSender__DkimPrivateKey=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__DkimPrivateKey' "$SECRETS_FILE")
SmtpClientDirectlyToRecipientMailServerEmailSender__DkimDomain=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__DkimDomain' "$SECRETS_FILE")
SmtpClientDirectlyToRecipientMailServerEmailSender__EhloDomainName=$(jq -r '.SmtpClientDirectlyToRecipientMailServerEmailSender__EhloDomainName' "$SECRETS_FILE")

EmailAddresses__NoReply=$(jq -r '.EmailAddresses__NoReply' "$SECRETS_FILE")
EmailAddresses__Support=$(jq -r '.EmailAddresses__Support' "$SECRETS_FILE")
EmailAddresses__Admin=$(jq -r '.EmailAddresses__Admin' "$SECRETS_FILE")
EmailAddresses__BackendErrors=$(jq -r '.EmailAddresses__BackendErrors' "$SECRETS_FILE")
EmailAddresses__FrontendErrors=$(jq -r '.EmailAddresses__FrontendErrors' "$SECRETS_FILE")

Runtime__Url=$(jq -r '.Runtime__Url' "$SECRETS_FILE")
Jwt__Key=$(jq -r '.Jwt__Key' "$SECRETS_FILE")
ConnectionStrings__Database=$(jq -r '.ConnectionStrings__Database' "$SECRETS_FILE")
