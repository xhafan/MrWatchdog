@page
@using MrWatchdog.Core.Features.Scrapers
@using MrWatchdog.Core.Infrastructure.Repositories
@using MrWatchdog.Core.Resources
@using MrWatchdog.Web.Infrastructure.Authorizations
@model ManageModel
@inject IUserRepository UserRepository

@{
    var title = Resource.ManageScrapers;
    ViewData["Title"] = title;
}

@section Navigation {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index"><i class="fa-solid fa-house"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@title</li>
        </ol>
    </nav>
}

<h1 class="display-4">@title</h1>

<div class="row">
    <div class="col-md-6">
        <turbo-frame id="userScrapers"
                     src="@ScraperUrlConstants.ScrapersManageUserScrapersUrl" />
    </div>
    <div class="col-md-6">
        @if (await User.IsSuperAdmin(UserRepository))
        {
            <turbo-frame id="otherUsersScrapers"
                         src="@ScraperUrlConstants.ScrapersManageOtherUsersScrapersUrl" />
        }
    </div>
</div>
