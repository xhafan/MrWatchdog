@page
@using MrWatchdog.Core.Resources
@model OtherUsersWatchdogsModel
@{
    Layout = null;
}
<!turbo-frame id="otherUsersWatchdogs">
    <p class="text-muted">
        @Resource.ManageOtherUsersWebScrapersDescription
    </p>
    @foreach (var watchdog in Model.OtherUsersWatchdogs)
    {
        <div>
            <a asp-page="/Watchdogs/Detail/Detail" 
               asp-route-watchdogId="@watchdog.WatchdogId" 
               data-turbo-frame="_top"
               class="text-wrap text-break"
               >
                @watchdog.WatchdogName</a>
            (@watchdog.UserEmail)
            <public-status-badge public-status="@watchdog.PublicStatus"
                                 show-private="false" />
        </div>
    }
</!turbo-frame>