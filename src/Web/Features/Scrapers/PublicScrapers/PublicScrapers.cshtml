@page
@using CoreUtils.Extensions
@using Microsoft.Extensions.Localization
@using MrWatchdog.Core.Features.Watchdogs
@using MrWatchdog.Core.Resources
@using MrWatchdog.Web.Infrastructure.Authorizations
@model PublicWatchdogsModel
@inject IStringLocalizer<Resource> Localizer
@{
    Layout = null;
}
<!turbo-frame id="publicWatchdogs">
    <h1 class="display-4">@Resource.PublicWebScrapers</h1>    
    <p class="text-muted">
        @Resource.PublicWebScrapersDescription
    </p>

    @foreach (var watchdog in Model.PublicWatchdogs)
    {
        <div>
            <a asp-page="/Watchdogs/ScrapingResults/ScrapingResults" 
               asp-route-watchdogId="@watchdog.WatchdogId"
               data-turbo-frame="_top"
               class="text-wrap text-break"
               >
                @watchdog.WatchdogName</a>

            @if (watchdog.UserId == User.GetUserId())
            {
                <span class="badge text-bg-primary"
                      title="@Resource.MyWebScraperTooltip">
                    @Resource.MyWebScraper
                </span>
            }
        </div>
    }
        
    @if (Model.PublicWatchdogs.IsEmpty())
    {
        <i class="fa-solid fa-triangle-exclamation text-warning"></i> 
        @Html.Raw(
            Localizer[
                Resource.ThereAreNoPublicWebScrapers, 
                $"<a href=\"{WatchdogUrlConstants.WatchdogCreateUrl}\" data-turbo-frame=\"_top\">{Resource.Here}</a>"
            ]
        )
    }
</!turbo-frame>