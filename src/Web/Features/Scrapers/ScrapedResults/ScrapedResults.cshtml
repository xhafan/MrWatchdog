@page "{scraperId}"
@using MrWatchdog.Core.Features.Account.Domain
@using MrWatchdog.Core.Features.Scrapers
@using MrWatchdog.Core.Infrastructure.Repositories
@using MrWatchdog.Core.Resources
@using MrWatchdog.Web.Features.Shared
@using MrWatchdog.Web.Features.Shared.TagHelpers.Onboarding
@using MrWatchdog.Web.Infrastructure.Authorizations
@model ScrapedResultsModel
@inject IUserRepository UserRepository

@{
    var title = Model.ScraperScrapedResultsArgs.ScraperName;
    ViewData["Title"] = title;
}

@section Navigation {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index"><i class="fa-solid fa-house"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Scrapers/Index">@Resource.Scrapers</a>
            </li>
            <li class="breadcrumb-item active text-wrap text-break" aria-current="page">@title</li>
        </ol>
    </nav>
    <onboarding id="@OnboardingElementIdentifiers.OnboardingId"
                identifier="@OnboardingIdentifiers.ScraperScrapedResults"
                steps="@([
                           new OnboardingStepStimulusModel(
                               Text: Resource.ScraperResultsOnboardingIntro
                           ),
                           new OnboardingStepStimulusModel(
                               Text: Resource.ScraperResultsOnboardingWatchedWebPages,
                               ElementIdentifier: $"#{@OnboardingElementIdentifiers.ScrapersScrapedResultsWebPagesWatchedWebPagesId}"
                           ),
                           new OnboardingStepStimulusModel(
                               Text: Resource.ScraperResultsOnboardingSearchTerm,
                               ElementIdentifier: $"#{OnboardingElementIdentifiers.ScrapersScrapedResultsSearchTermInputGroupId}"
                           ),
                           new OnboardingStepStimulusModel(
                               Text: Resource.ScraperResultsOnboardingCreateWatchdog,
                               ElementIdentifier: $"#{OnboardingElementIdentifiers.ScrapersScrapedResultsCreateWatchdogId}"
                           ),
                           new OnboardingStepStimulusModel(
                               Text: Resource.ScraperResultsOnboardingLoginOrRegisterToCreateWatchdog,
                               ElementIdentifier: $"#{OnboardingElementIdentifiers.ScrapersScrapedResultsLoginToCreateWatchdogId}"
                           ),
                           new OnboardingStepStimulusModel(
                               Text: Resource.OnboardingViewAgainStep,
                               ElementIdentifier: $"#{OnboardingElementIdentifiers.OnboardingId}"
                           )
                       ])"
    />
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="display-4 text-wrap text-break">@title</h1>
    @if (Model.ScraperScrapedResultsArgs.IsArchived)
    {
        <span class="badge text-bg-warning">
            @Resource.Archived
        </span>
    }
</div>

@if (!string.IsNullOrWhiteSpace(Model.ScraperScrapedResultsArgs.ScraperDescription))
{
    <p class="text-muted">
        @Model.ScraperScrapedResultsArgs.ScraperDescription
    </p>
}

<div @Stimulus.Controller(StimulusControllers.ScrapersScrapedResults)>
    <form asp-page-handler="CreateWatchdog"
          asp-route-scraperId="@Model.ScraperScrapedResultsArgs.ScraperId"
          data-scrapers--scraped-results-target="createWatchdogForm"
    >
        <!-- Prevent implicit submission of the form by hitting enter on inputs -->
        <button type="submit" disabled style="display: none"></button>

        <div class="my-3">
            <div class="input-group" 
                 id="@OnboardingElementIdentifiers.ScrapersScrapedResultsSearchTermInputGroupId"
                 style="display:@(Model.ScraperScrapedResultsArgs.ScrapedResultsFilteringNotSupported ? "none" : "")"
                 >
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input asp-for="SearchTerm" 
                       class="form-control" 
                       data-scrapers--scraped-results-target="searchTerm"
                       data-action="input->@StimulusControllers.ScrapersScrapedResults#onSearchTermModified"
                       placeholder="@Resource.FilterResults"
                />
            </div>
            <span asp-validation-for="SearchTerm" class="text-danger"></span>
            <div class="mt-3">
                <button class="btn btn-primary text-wrap text-break"
                        data-scrapers--scraped-results-target="createWatchdog"
                        type="submit"
                        style="display:@(User.IsAuthenticated() ? "" : "none")"
                        id="@OnboardingElementIdentifiers.ScrapersScrapedResultsCreateWatchdogId"
                        >
                    @Resource.CreateWatchdog
                </button> 
                <button class="btn btn-primary"
                        data-scrapers--scraped-results-target="loginToCreateWatchdog"
                        type="button"
                        data-action="@StimulusControllers.ScrapersScrapedResults#loginToNotifyAboutNewResults"
                        style="display:@(User.IsAuthenticated() ? "none" : "")"
                        id="@OnboardingElementIdentifiers.ScrapersScrapedResultsLoginToCreateWatchdogId"
                        >
                    @Resource.LoginOrRegisterToCreateWatchdog
                </button>
                @if (User.GetUserId() == Model.ScraperScrapedResultsArgs.UserId || await User.IsSuperAdmin(UserRepository))
                {
                    <a href="@ScraperUrlConstants.ScraperDetailUrlTemplate.WithScraperId(Model.ScraperScrapedResultsArgs.ScraperId)"
                       class="btn btn-outline-primary text-decoration-none">
                        @Resource.ManageScraper
                    </a>
                }
            </div>
        </div>
    </form>

    <scraped-results-web-pages scraper-scraped-results-args="Model.ScraperScrapedResultsArgs" />
</div>