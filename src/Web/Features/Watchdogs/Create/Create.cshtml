@page
@using MrWatchdog.Core.Features.Account.Domain
@using MrWatchdog.Core.Resources
@using MrWatchdog.Web.Features.Shared
@using MrWatchdog.Web.Features.Shared.TagHelpers.Onboarding
@model CreateModel

@{
    var title = Resource.CreateWebScraper;
    ViewData["Title"] = title;
}

@section Navigation {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index"><i class="fa-solid fa-house"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Watchdogs/Manage/Manage">@Resource.ManageWebScrapers</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@title</li>
        </ol>
    </nav>
    <onboarding id="@OnboardingElementIdentifiers.OnboardingId"
                identifier="@OnboardingIdentifiers.WatchdogsCreate"
                steps="@([
                           new OnboardingStepStimulusModel(
                               Text: Resource.WebScraperCreateOnboardingSetName,
                               ElementIdentifier: $"#{OnboardingElementIdentifiers.WebScraperCreateSetNameId}"
                           )
                       ])"
    />
}

<h1 class="display-4">@title</h1>

<div @Stimulus.Controller(StimulusControllers.WatchdogsCreate)>
    <form method="post" 
          data-watchdogs--create-target="form"
          style="max-width: 600px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="mb-3" id="@OnboardingElementIdentifiers.WebScraperCreateSetNameId">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">
                @Resource.Create
            </button>
        </div>
    </form>
</div>
