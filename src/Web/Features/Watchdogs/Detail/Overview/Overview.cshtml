@page "{watchdogSearchId}"
@using MrWatchdog.Core.Resources
@using MrWatchdog.Web.Features.Shared
@using MrWatchdog.Web.Features.Shared.TagHelpers.Onboarding
@model OverviewModel
@{
   Layout = null;
}
<!turbo-frame id="watchdog_search_overview_@(Model.WatchdogSearchOverviewArgs.WatchdogSearchId)">
    <div @Stimulus.Controller(StimulusControllers.WatchdogSearchOverview)>
        <view-or-edit-form action="@Url.Page("Overview")">
        
            <view-mode-item>
                <div class="mb-3">
                    <div class="input-group @OnboardingElementIdentifiers.WatchdogsSearchSearchTermInputGroupCssClass">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input asp-for="WatchdogSearchOverviewArgs.SearchTerm" 
                               class="form-control" 
                               placeholder="@Resource.FilterResults"
                               disabled
                        />
                    </div>
                </div>
                <div class="mb-1 @OnboardingElementIdentifiers.WatchdogsSearchReceiveNotificationCssClass">
                    <input type="checkbox" checked="@Model.WatchdogSearchOverviewArgs.ReceiveNotification" disabled/>
                    <label asp-for="WatchdogSearchOverviewArgs.ReceiveNotification" class="form-check-label fw-bold">
                        <i class="fa-solid fa-bell ms-2"></i> @Html.Raw(Resource.ReceiveEmailNotificationAboutNewResults)
                    </label>
                </div>
            </view-mode-item>
        
            <edit-mode-item>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="WatchdogSearchOverviewArgs.WatchdogSearchId" type="hidden" />
                
                <div class="mb-3">
                    <div class="input-group @OnboardingElementIdentifiers.WatchdogsSearchSearchTermInputGroupCssClass">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input asp-for="WatchdogSearchOverviewArgs.SearchTerm" 
                               class="form-control"
                               data-watchdogs--search-overview-target="searchTerm"
                               data-action="input->@StimulusControllers.WatchdogSearchOverview#onSearchTermModified"
                               placeholder="@Resource.FilterResults"
                        />
                    </div>
                    <span asp-validation-for="WatchdogSearchOverviewArgs.SearchTerm" class="text-danger"></span>
                </div>
                <div class="mb-1 @OnboardingElementIdentifiers.WatchdogsSearchReceiveNotificationCssClass">
                    <input asp-for="WatchdogSearchOverviewArgs.ReceiveNotification"
                           type="checkbox" 
                           checked="@Model.WatchdogSearchOverviewArgs.ReceiveNotification" 
                    />
                    <label asp-for="WatchdogSearchOverviewArgs.ReceiveNotification" 
                           class="form-check-label fw-bold">
                        <i class="fa-solid fa-bell ms-2"></i> @Html.Raw(Resource.ReceiveEmailNotificationAboutNewResults)
                    </label>
                </div>
            </edit-mode-item>

        </view-or-edit-form>
    </div>
</!turbo-frame>

