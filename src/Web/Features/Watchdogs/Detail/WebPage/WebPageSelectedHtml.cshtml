@page
@model WebPageSelectedHtmlModel
@{
   Layout = null;
}
<!turbo-frame id="watchdog_web_page_selected_html_@(Model.WatchdogWebPageSelectedHtmlDto.WatchdogWebPageId)">
    <div class="mb-3">
        <label class="form-label fw-bold">Selected HTML</label>
        <div>
            @if (Model.WatchdogWebPageSelectedHtmlDto.SelectedHtml != null)
            {
                <textarea readonly style="width:100%" rows="7">@Model.WatchdogWebPageSelectedHtmlDto.SelectedHtml</textarea>
            }
            else
            {
                <span class="text-danger">
                    @if (Model.WatchdogWebPageSelectedHtmlDto.ScrapingErrorMessage != null)
                    {
                        @:Error: @Model.WatchdogWebPageSelectedHtmlDto.ScrapingErrorMessage
                    }
                    else
                    {
                        @:Web page not scraped yet
                    }
                </span>
            }
        </div>
        @if (Model.WatchdogWebPageSelectedHtmlDto.ScrapedOn != null)
        {
            <span>Scraped on: @($"{Model.WatchdogWebPageSelectedHtmlDto.ScrapedOn:yyyy-MM-dd HH:mm:ss UTC}")</span>
        }
    </div>
</!turbo-frame>

