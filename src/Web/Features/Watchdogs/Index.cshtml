@page
@using MrWatchdog.Core.Resources
@model IndexModel

@{
    var title = Resource.ListOfWatchdogs;
    ViewData["Title"] = title;
}

@section Navigation {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index"><i class="fa-solid fa-house"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@title</li>
        </ol>
    </nav>
}

<h1 class="display-4">@title</h1>

@foreach (var watchdogs in Model.Watchdogs)
{
    <div>
        <a asp-page="/Watchdogs/ScrapingResults/ScrapingResults" asp-route-watchdogId="@watchdogs.WatchdogId">@watchdogs.WatchdogName</a>
    </div>
}
