@page
@using MrWatchdog.Core.Features.Watchdogs
@using MrWatchdog.Core.Resources
@using MrWatchdog.Web.Infrastructure.Authorizations
@model IndexModel

@{
    var title = Resource.ListOfWatchdogs;
    ViewData["Title"] = title;
}

@section Navigation {
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Index"><i class="fa-solid fa-house"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@title</li>
        </ol>
    </nav>
}

<div class="row">
    <div class="col-md-8">
        <turbo-frame id="publicWatchdogs"
                     src="@WatchdogUrlConstants.WachdogsPublicWatchdogsUrl"
        />
    </div>
    <div class="col-md-4">
        @if (User.IsAuthenticated())
        {
            <turbo-frame id="userWatchdogs"
                         src="@WatchdogUrlConstants.WatchdogsUserWatchdogsUrl"
            />
        }
    </div>
</div>

